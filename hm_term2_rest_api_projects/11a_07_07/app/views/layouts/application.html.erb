<!DOCTYPE html>
<html>
<head>
  <title><%= @title || 'Shop Items' %></title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.min.css' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>
<div class="ui secondary massive pointing menu">
  <%= link_to 'Home', { controller: '/pages', action: 'home' }, class: active_class('/') + 'item' %>
  <div class="right menu">
    <% if admin_signed_in? %>
      <%= link_to 'Create', { controller: 'administration/administration', action: 'add' }, class: 'ui item' %>
    <% else %>
      <%= link_to 'Administration', new_admin_session_path, class: 'ui item' %>
    <% end %>
  </div>
</div>
<div class="ui container">
  <% if notice %>
      <p class="ui message"><%= notice %></p>
  <% end %>

  <% if alert %>
      <p class="ui error message"><%= alert %></p>
  <% end %>
<br>
<%= yield %>
</div>
</body>
</html>
